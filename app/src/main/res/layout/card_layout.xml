<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="1dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="20dp"
android:layout_marginBottom="8dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardCornerRadius="0dp"

    card_view:cardBackgroundColor="#f2f2f2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="05dp"
    android:layout_marginLeft="010dp"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="wrap_content"
android:layout_gravity="left"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation"
        android:textSize="15sp"
        android:textColor="#f0750f"

        android:layout_gravity="left"
        android:gravity="center"></TextView></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="right"

        android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="05dp"
            android:background="#ffffff"

            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/hello_123">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:textColor="#000000"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginRight="010dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="010dp"
            android:id="@+id/des_ok_input" />
        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ededed"

    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/activity_card_view_ohh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.rcoem.enotice.enotice_app.Card_view_ohh">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sasbsdssaottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:contentPadding="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="8dp"
                card_view:cardElevation="4dp"
                android:layout_gravity="center"
                card_view:cardMaxElevation="6dp"
                card_view:cardCornerRadius="0dp"

                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_img"
                        android:src="@drawable/prof"
                        />

                </LinearLayout>




            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice Details"
                android:textSize="18sp"
                android:layout_marginTop="20dp"            android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:gravity="center"></TextView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_bsaottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                card_view:cardElevation="4dp"
                card_view:cardMaxElevation="6dp"
                card_view:cardCornerRadius="0dp"

                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/user_name"
                        android:textSize="18sp"
                        android:textColor="#45bcce"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="center"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="18sp"
                        android:id="@+id/desc"

                        android:textColor="#45bcce"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="center"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="18sp"
                        android:id="@+id/title_title"

                        android:textColor="#45bcce"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="center"></TextView>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="18sp"
                android:layout_marginTop="20dp"            android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:gravity="center"></TextView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sasbsaottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                card_view:cardElevation="4dp"
                card_view:cardMaxElevation="6dp"
                card_view:cardCornerRadius="0dp"

                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approval"
                        android:id="@+id/approve"
                        android:textSize="18sp"
                        android:textColor="#45bcce"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="center"></TextView>


                </LinearLayout>




            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>